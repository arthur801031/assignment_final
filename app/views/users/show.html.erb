<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<div class="span8">
    <% if @user.assignments.any? %>
      <h3>Microposts (<%= @user.assignments.count %>)</h3>
      <ol class="assignments">
        <%= render @assignments %>
      </ol>
      <%= will_paginate @assignments %>
    <% end %>
</div>